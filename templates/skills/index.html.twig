{% extends 'base.html.twig' %}

{% block title %}Compétences{% endblock %}

{% block body %}

    <div class="container">

        <!-- Titre et Action -->
        <div class="row d-flex align-items-center my-4">
            <div class="col">
                <h1 class="my-4">Liste des Compétences</h1>
            </div>
            <div class="col text-end">
                <a class="btn btn-primary" href="{{ path ('skills_create')}}">Ajouter une compétence</a>
            </div>
        </div>
        
        <!-- En tête tableau -->
        <div class="row my-2 py-1">
            <div class="col">
                <span class="fw-bold">Nom</span>
            </div>
            <div class="col">
                <span class="fw-bold">Catégorie</span>
            </div>
            <div class="col"></div>
        </div>

        <!-- Tableau -->
        {% for skill in skills %}
            <!-- Row Skill -->
            <div class="row d-flex align-items-center my-2 py-2 rounded table-row">
                <div class="col">
                    {{ skill.name }}
                </div>
                <div class="col">
                    {{ skill.category }}
                </div>
                <div class="col text-end">
                    <a class="blue-3  mx-1" href="{{ path ('skills_edit', {'id': skill.id})}}"><i class="far fa-pen fa-fw"></i></a>
					<a class="grape-3 mx-1" href="{{ path ('skills_delete', {'id': skill.id})}}"><i class="far fa-times fa-fw"></i></a>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
