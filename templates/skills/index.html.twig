{% extends 'base.html.twig' %}

{% block title %}Compétences{% endblock %}

{% block body %}

    <div class="container">

        <!-- Titre et Action -->
        <div class="row d-flex align-items-center my-4">
            <div class="col">
                <h1>Liste des compétences</h1>
            </div>
            <div class="col text-end">
                <button class="btn btn-primary" href="{{ path ('skills_create')}}">Ajouter une compétence</button>
            </div>
        </div>
        
        <!-- En tête tableau -->
        <div class="row my-2 py-1">
            <div class="col">
                <strong>Id</strong>
            </div>
            <div class="col">
                <strong>Nom</strong>
            </div>
            <div class="col"></div>
        </div>

        <!-- Tableau -->
        {% for skill in skills %}
            <!-- Row Skill -->
            <div class="row d-flex align-items-center my-2 py-1 rounded table-row">
                <div class="col">
                    {{ skill.id }}
                </div>
                <div class="col">
                    {{ skill.name }}
                </div>
                <div class="col text-end">
                    <a class="btn btn-outline-success px-3" href="{{ path ('skills_edit', {'id': skill.id})}}">
						<i class="far fa-pen"></i>
					</a>
					<a class="btn btn-outline-danger px-3">
						<i class="far fa-times"></i>
					</a>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
