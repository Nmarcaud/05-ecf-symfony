{% extends 'base.html.twig' %}

{% block title %}Hello CandidatController!{% endblock %}

{% block body %}
    <div class="container-fluid">

        
        <div class="row d-flex align-items-center my-4">
            <div class="col">
                <h1 class="my-4">Liste des Candidats</h1>
            </div>
            <div class="col text-end">
                <a class="btn btn-primary" href="{{ path ('candidats_create')}}">Ajouter un candidat</a>
            </div>
        </div>

        <!-- En tête tableau -->
        <div class="row my-2 py-1">
            <div class="col"></div>
            <div class="col">
                <strong>Id</strong>
            </div>
            <div class="col">
                <strong>Prénom</strong>
            </div>
            <div class="col">
                <strong>Nom</strong>
            </div>
            <div class="col">
                <strong>Status</strong>
            </div>
            <div class="col"></div>
        </div>

        {% for c in candidats %}
            
            <!-- Row Skill -->
            <div class="row d-flex align-items-center my-2 py-1 rounded table-row">
                <div class="col">
                    <img src="{{ c.pictureUrl }}" alt="{{ c.firstname }} {{ c.lastname }}" class="table-img">
                </div>
                <div class="col">
                    {{ c.id }}
                </div>
                <div class="col">
                    {{ c.firstname }}
                </div>
                <div class="col">
                    {{ c.lastname }}
                </div>
                <div class="col">
                    {{ c.status.name }}
                </div>
                <div class="col text-end">
                    <a class="blue-2 mx-1" href="{{ path('profil', {'id': c.id}) }}"><i class="far fa-user-tag"></i></a>
                    <a class="grass-2 mx-1" href="{{ path ('candidats_edit', {'id': c.id})}}"><i class="far fa-user-edit"></i></a>
                    <a class="grape-2 mx-1" href="{{ path ('candidats_delete', {'id': c.id})}}"><i class="far fa-user-times"></i></a>
                </div>
            </div>
            

        {% endfor %}

        
    </div>
{% endblock %}
