{% extends 'base.html.twig' %}

{% block title %}Modifier {{ candidat.firstname }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="row d-flex align-items-center my-4">
            <div class="col">
                <h1>Modifier un candidat</h1>
            </div>
        </div>
        
        {{ form_start(formView) }}

        <div class="row">
            <div class="col">{{ form_row(formView.firstname) }}</div>
            <div class="col">{{ form_row(formView.lastname) }}</div>
        </div>

        <div class="row">
            <div class="col">{{ form_row(formView.email) }}</div>
            <div class="col">{{ form_row(formView.phone) }}</div>
        </div>

        <div class="row">
            <div class="col">{{ form_row(formView.adresse) }}</div>
        </div>

        <div class="row">
            <div class="col">{{ form_row(formView.zip_code) }}</div>
            <div class="col">{{ form_row(formView.city) }}</div>
        </div>

        {# <div class="row">
            <div class="col">{{ form_row(formView.skills) }}</div>
        </div> #}

        {{ form_end(formView) }}
        
    </div>

{% endblock %}
