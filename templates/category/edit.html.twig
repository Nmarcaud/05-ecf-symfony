{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie
{% endblock %}

{% block body %}

	<div class="row d-flex align-items-center my-4">
		<div class="col">
			<h1 class="my-4">Modifier une catégorie</h1>
		</div>
	</div>

	{{ form_start(formView) }}

	<div class="row">
